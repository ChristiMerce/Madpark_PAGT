<%- layout('layouts/main') %>
<head>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Perfil del usuario</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
          body {
            background-color: #f5f5f5;
            color: #4D4D4D;
            font-family: 'Arial, sans-serif';
          }
      
          h1 {
            color: #284c61ef;
            margin-top: 90px;
          }
      
      
          .btn-custom {
            background-color: #284c61ef;
            color: #FFFFFF;
            border: none;
          }
      
          .btn-custom:hover {
            background-color: #65a5a5;
          }
      
          .link {
            color: #284c61ef;
            text-decoration: none;
          }
      
          .link:hover {
            color: #87CEFA;
          }
      
          .card-custom {
            border: none;
            background-color: #FFFFFF;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
          }
      
          .card-custom .card-body {
            padding: 20px;
          }
      
          .card-custom .card-title {
            font-weight: bold;
            color: #284c61ef;
          }
        </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Mis Reservas</h1>
        
        <div class="row">
            <% function generateRandomNumber() { %>
                <%= Math.floor(Math.random() * 900000) + 100000 %>
            <% } %>
            <% for (let i = 0; i < 3; i++) { %>
                <div class="col-md-4 mb-4">
                    <div class="card card-custom">
                        <div class="card-body">
                            <h5 class="card-title">Reserva #<%= generateRandomNumber() %></h5>
                            <p class="card-text">Nombre del Parking: Aparcamiento mixto. Encuentro </p>
                            <p class="card-text">Barrio: Media Legua </p>
                            <a href="#" class="btn btn-custom">Ver Detalles</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <%- include('footer') %>
</body>
