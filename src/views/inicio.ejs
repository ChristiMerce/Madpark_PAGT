<%- layout('layouts/main')%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MADPARK</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Estilos personalizados */
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, system-ui;
      background-image: url('/images/fondo.jpg'); 
      background-size: cover;
      background-position: center;
      position: relative;
      height: 100vh;
      z-index: 1;
    }
    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(114, 110, 110, 0.5); /* Fondo con transparencia del 50% */
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .text-overlay {
      color: rgb(241, 236, 236);
      text-align: center;
      font-family: 'Playfair Display', serif;
      font-size: 100px;
      
    }
    .text-green {
      color: rgb(138, 199, 248);
      font-size: 4rem; /* Color verde para la palabra "parking" */
      font-size: 100px;
    }
    .scroll-down-arrow {
      margin-top: 20px; /* Espacio entre el texto y la flecha */
      font-size: 2rem; /* Tamaño de la flecha */
      color: white; /* Color de la flecha */
      z-index: 1000;
    }
    
  </style>
</head>
<body>


  <!-- Contenido de la Página -->
  <div class="overlay">
    <div class="text-overlay">
      Tu <span class="text-green">Parking</span>
      <p>tu elección, al instante.</p>
    </div>
  </div>



  <!-- Scripts de Bootstrap y JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>