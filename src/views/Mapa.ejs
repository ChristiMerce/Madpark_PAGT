    <script>
        var parkingIcon = L.icon({
            iconUrl: 'images/aparcamiento.png',
            iconSize: [12, 12],
            iconAnchor: [12, 25],
            popupAnchor: [0, -25]
        });


        var SelectedparkingIcon = L.icon({
            iconUrl: 'images/selectedParking.png',
            iconSize: [12, 12],
