            <li class="nav-item">
              <a class="nav-link" href="/conocenos">Conocenos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Mapa">Mapa</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/perfil">profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Exit</a>
            </li>

            <%  } else {%>
              <li class="nav-item">
                <a class="nav-link" href="/inicio">Inicio</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/mapa">Mapa</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/conocenos">Conocenos</a>
