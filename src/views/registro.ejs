
<%- layout('layouts/main')%>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>MADPARK</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-MV7/2au+FDcx+ZxkF+V0veZW9nGYi/1n3c1GEx4eOTBX02ldg8n0d3oyO0Hg+KsTmW/1BZZ3Y4iZywehQ6eag==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    /* Define tu propio color para el botón */
    .custom-btn-color {
      background-color: #170fa8; /* Color personalizado */
      border-color: #170fa8; /* Borde del botón */
      color: rgb(255, 255, 255); /* Color del texto */
    }
  </style>
<body style="background-color: #fefefe;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center" style="color: #170fa8; font-family: Georgia, serif; padding-top: 100px;">Forma parte de MADPARK</h1>
                <form id="registrationForm" style="padding-left: 50px;">
                    <div class="form-row align-items-center">
                        <div class="form-group col-md-6">
                            <label for="inputName">Nombre</label>
                            <input type="name" class="form-control" id="inputName" placeholder="Antonio" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputSurename">Apellidos</label>
                            <input type="surename" class="form-control" id="inputSurename" placeholder="Martinez Fernandez" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail">Correo electrónico</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="usuario@ejemplo.com" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword">Contraseña</label>
                            <input type="password" class="form-control" id="inputPassword" placeholder="!Emjemplo.123" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Dirección</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="Calle Alcalá, 13" required>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCommunity">Comunidad Autónoma</label>
                            <input type="text" class="form-control" id="inputCommunity" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputProvince">Provincia</label>
                            <select id="inputProvince" class="form-control" required>
                                <option value="">Selecciona una provincia</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn custom-btn-color" style="margin-top: 10px;">Registro</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to dynamically populate provinces based on selected community autonomous region
        function populateProvinces() {
            var community = document.getElementById("inputCommunity").value;
            var provinceDropdown = document.getElementById("inputProvince");
            // Clear previous options
            provinceDropdown.innerHTML = '<option value="">Selecciona una provincia</option>';
            // Add options based on the selected community
            switch (community) {
                case "Andalucía":
                    provinceDropdown.innerHTML += '<option value="Almería">Almería</option>' +
                                                   '<option value="Cádiz">Cádiz</option>' +
                                                   '<option value="Córdoba">Córdoba</option>' +
                                                   '<option value="Granada">Granada</option>' +
                                                   '<option value="Huelva">Huelva</option>' +
                                                   '<option value="Jaén">Jaén</option>' +
                                                   '<option value="Málaga">Málaga</option>' +
                                                   '<option value="Sevilla">Sevilla</option>';
                    break;
				case "Castilla-La Mancha":
                    provinceDropdown.innerHTML += '<option value="Cuenca">Cuenca</option>' +
                                                   '<option value="Guadalajara">Guadalajara</option>' +
                                                   '<option value="Toledo">Toledo</option>' +
                                                   '<option value="Ciudad Real">Ciudad Real</option>' ;
					break;
				
				 case "Castilla y León":
                 	provinceDropdown.innerHTML += '<option value="Valladolid">Valladolid</option>' +
                                                   '<option value="León">León</option>' +
                                                   '<option value="Toledo">Palencia</option>' +
                                                   '<option value="Palencia">Segovia</option>' +
												   '<option value="Soria">Soria</option>' +
												   '<option value="Salamanca">Salamanca</option>' +
												   '<option value="Zamora">Zamora</option>' +
												   '<option value="Ávila">Ávila</option>' ;		
					break;						   
					case "Galicia":
                 	provinceDropdown.innerHTML += '<option value="Lugo">Lugo</option>' +
                                                   '<option value="Vigo">Vigo</option>' +
                                                   '<option value="Ourense">Ourense</option>' +
                                                   '<option value="Pontevedra">Pontevedra</option>' +
												   '<option value="A Coruña">A Coruña</option>' ;	
					break;
					case "Cantabria":
                 	provinceDropdown.innerHTML += '<option value="Cantabria">Cantabria</option>';	
					break;
					case "Asturias":
                 	provinceDropdown.innerHTML += '<option value="Asturias">Asturias</option>';	
					break;
					case "Madrid":
                 	provinceDropdown.innerHTML += '<option value="Madrid">Madrid</option>';	
					break;
					case "Murcia":
                 	provinceDropdown.innerHTML += '<option value="Murcia">Murcia</option>';	
					break;
					case "País Vasco":
                 	provinceDropdown.innerHTML += '<option value="Álava">Álava</option>'+
					                               '<option value="Guipúzkoa">Guipúzkoa</option>'+
												   '<option value="Bizkaia">Bizkaia</option>';
												   
					break;
					case "Cataluña":
                 	provinceDropdown.innerHTML += '<option value="Barcelona">Barcelona</option>'+
					                               '<option value="Girona">Girona</option>'+
												   '<option value="Lleida">Lleida</option>'+
												   '<option value="Tarragona">Tarragona</option>';

												   
					break;
					case "Comunidad Valenciana":
                 	provinceDropdown.innerHTML += '<option value="Valencia">Valencia</option>'+
					                               '<option value="Alicante">Alicante</option>'+
												   '<option value="Castellón">Castellón</option>';

												   
					break;
					case "La Rioja":
                 	provinceDropdown.innerHTML += '<option value="La Rioja">La Rioja</option>';

												   
					break;
					case "Extremadura":
                 	provinceDropdown.innerHTML += '<option value="Badajoz">Badajoz</option>'+
					                               '<option value="Cáceres">Cáceres</option>';

												   
					break;
                default:
                    break;
            }
        }

        // Event listener for community input change
        document.getElementById("inputCommunity").addEventListener("change", populateProvinces);
    </script>
</body>
</html>