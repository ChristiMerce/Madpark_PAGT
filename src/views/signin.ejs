<%- layout('layouts/main')%>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>MADPARK</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-MV7/2au+FDcx+ZxkF+V0veZW9nGYi/1n3c1GEx4eOTBX02ldg8n0d3oyO0Hg+KsTmW/1BZZ3Y4iZywehQ6eag==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    /* Define tu propio color para el botón */
    .custom-btn-color {
      background-color: #DB94B2; /* Color personalizado */
      border-color: #DB94B2; /* Borde del botón */
      color: rgb(255, 255, 255); /* Color del texto */
    }
  </style>
<body style="background-color: #F9F5EC;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center" style="color: #DB94B2; font-family: Georgia, serif; padding-top: 100px;">Inicia Sesión</h1>
                <form id="registrationForm" style="padding-left: 50px;">
                    <div class="form-row align-items-center">
                        <div class="form-group col-md-6">
                            <label for="inputEmail">Correo electrónico</label>
                            <input type="email" class="form-control" id="inputEmail" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPsw">Contraseña</label>
                            <input type="password" class="form-control" id="inputPsw" required>
                        </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                            Recuérdame
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn custom-btn-color">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>