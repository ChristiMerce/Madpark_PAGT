<%- layout('layouts/main')%>
<head>
  <title>MADPARK</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet">
  <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      integrity="sha512-MV7/2au+FDcx+ZxkF+V0veZW9nGYi/1n3c1GEx4eOTBX02ldg8n0d3oyO0Hg+KsTmW/1BZZ3Y4iZywehQ6eag=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>
  /* Define tu propio color para el botón */
  .custom-btn-color {
    background-color: #DB94B2; /* Color personalizado */
    border-color: #DB94B2; /* Borde del botón */
    color: rgb(255, 255, 255); /* Color del texto */
  }
</style>

<body style="background-color: #F9F5EC;"></body>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center" style="color: #DB94B2; font-family: Georgia, serif; padding-top: 100px;">entra en Madpark</h1>
      <div class="card">
        <div class="card-body">

          <form action="/signin" method="POST">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <button type="submit">
              Signin
            </button>
          </form>

        </div>
        
      </div>
      
    </div>
  </div>


</div>
