<%- layout('layouts/main')%>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil del usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .user-info-table {
      margin: 20px auto;
      width: 80%;
      border-collapse: collapse;
      font-family: 'Playfair Display', serif;
    }

    .user-info-table th,
    .user-info-table td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: left;
    }

    .user-info-table th {
      background-color: #f0f0f0;
      font-weight: bold;
    }

    .user-info-table tr:nth-child(odd) {
      background-color: #fff;
    }
  </style>
</head>
<body class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="container">
    <h1 class="text-center display-4" style="font-family: 'Playfair Display', serif; font-weight: 700; color: #2196F3;">Perfil del usuario</h1>
    <%= user.Comunidad %>

    <table class="user-info-table">
      <tr>
        <th>ID:</th>
        <td><%= user._id %></td>
      </tr>
      <tr>
        <th>Correo electrónico:</th>
        <td><%= user.email %></td>
      </tr>
      <tr>
        <th>Nombre:</th>
        <td><%= user.Name %></td>
      </tr>
      <tr>
        <th>Apellidos:</th>
        <td><%= user.surename %></td>
      </tr>
      <tr>
        <th>Dirección:</th>
        <td><%= user.address %></td>
      </tr>
      <tr>
        <th>Comunidad:</th>
        <td><%= user.comunidad %></td>
      </tr>
      <tr>
        <th>Provincia:</th>
        <td><%= user.Provincia %></td>
      </tr>
    </table>

    <hr>

    <div class="back-btn text-center">
      <a href="/">Volver al inicio</a>
    </div>
  </div>
</body>
</html>




    
