<%- layout('layouts/main')%>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil del usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f5f5;
      color: #4D4D4D;
      font-family: 'Arial, sans-serif';
    }

    h1 {
      color: #284c61ef;
      margin-top: 20px;
    }

    .profile-section {
      background-color: #E0E0E0;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .profile-pic {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
    }

    .btn-custom {
      background-color: #284c61ef;
      color: #FFFFFF;
      border: none;
    }

    .btn-custom:hover {
      background-color: #65a5a5;
    }

    .link {
      color: #284c61ef;
      text-decoration: none;
    }

    .link:hover {
      color: #87CEFA;
    }

    .card-custom {
      border: none;
      background-color: #FFFFFF;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
    }

    .card-custom .card-body {
      padding: 20px;
    }

    .card-custom .card-title {
      font-weight: bold;
      color: #284c61ef;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center display-4" style="margin-top: 100px;">Hola,<%= user.Name %></h1>

    <div class="profile-section text-center mt-4">
      <img src="images/user.jpg" alt="Foto de Perfil" class="profile-pic">
    </div>

    <div class="card card-custom">
      <div class="card-body">
        <h5 class="card-title">Información Personal</h5>
        <p class="card-text"><strong>Correo electrónico:</strong> <%= user.email %></p>
        <p class="card-text"><strong>Nombre:</strong> <%= user.Name %></p>
        <p class="card-text"><strong>Apellidos:</strong> <%= user.surename %></p>
        <p class="card-text"><strong>Dirección:</strong> <%= user.address %></p>
        <p class="card-text"><strong>Comunidad:</strong> <%= user.comunidad %></p>
        <p class="card-text"><strong>Provincia:</strong> <%= user.Provincia %></p>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/reservas" class="btn btn-custom">Mis reservas</a>
    </div>
    
  </div>

</body>
<%- include('footer') %>
</html>